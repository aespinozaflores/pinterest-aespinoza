<p id="notice"><%= notice %></p>
<div class="container">
<h1>Listing Pins</h1>
<br>
    <% @pins.each do |pin| %>
      <div class="col-md-3">
        <div class="thumbnail">
        <%= pin.description %>    
          <%= image_tag(pin.photo, :style=> 'img-responsive') %>
          <div class="buttons", style="margin-top: 10px; margin-bottom:10px">
            <%= link_to 'Show', pin, :class=>'btn-link' %>
            <%= link_to 'Edit', edit_pin_path(pin), :class=>'btn' %>
            <% if user_signed_in? %>
            <%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>

<br>
<% if user_signed_in? %>
<%= link_to 'New Pin', new_pin_path, :style=>'color:white' %>
<% end %>
</div>